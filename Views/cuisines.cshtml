<h1>Restaurant List</h1>
<hr />
<h2>Cuisines:</h2>
<ul>
  @if (Model.Count != 0)
  {
    @foreach (var category in Model)
    {
      <li><a href="/cuisines/@category.GetId()">@cuisine.GetName()</a> | <a href="/category/edit/@cuisine.GetId()">Edit</a></li>
    }
  }
</ul>
<h4><a href="/cuisines/new">Add a new category</a></h4>
<h4><a href="/">Return home</a></h4>

<form action="/cuisines/clear" method="post">
  <button type="submit">Clear all cuisines</button>
</form>
